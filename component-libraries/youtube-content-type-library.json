{
    "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
    "id": "{CONTENT_TYPE_BASEPATH}/component-libraries/youtube-content-type-library.json",
    "title": "Core type schema for alignment",
    "description":"core content type components to build content types",
    "allOf": [
        {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
        }
    ],
    "propertyOrder": [
        "link",
        "title",
        "thumbnail"
    ],
    "type": "object",
    "definitions": {
        "youtube-basic": {
            "type": "object",
            "title": "YOUTUBE VIDEO",
            "properties": {
                "link": {
                    "title": "YouTube Link",
                    "type": "string",
                    "description": "The YouTube link to the video",
                    "format": "uri"
                },
                "title": {
                    "title": "Video Title",
                    "type": "string",
                    "description": "Short Description of the video",
                    "format": "text"
                },
                "thumbnail": {
                    "title": "Thumbnail",
                    "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
                }
            }
        }
    }
}